<div class='all-page-title page-breadcrumb'>
    <div class='container text-center'>
        <div class='row'>
            <div class='col-lg-12'>
                <h1>Cập nhật</h1>
            </div>
        </div>
    </div>
</div>
<div class='mt-4' style='font-size: 20px; background-color:rgb(235, 233, 233);'>
    <h3 style='color: red; margin-left: 3%'>Cập nhật topping</h3>
    <form
        class='mt-4'
        method='post'
        action='/toppings/{{topping._id}}?_method=put'
    >
        <div class='form-group' style='margin-left: 3%'>
            <label for='name'>Tên</label>
            <input
                type='text'
                class='form-control'
                id='name'
                name='name'
                value='{{topping.name}}'
                style='font-size: 15px; width: 60%;'
            />
        </div>
        <div class='form-group' style='margin-left: 3%'>
            <label for='description'>Mô tả</label>
            <input
                type='text'
                class='form-control'
                id='description'
                name='description'
                value='{{topping.description}}'
                style='font-size: 15px; width: 60%;'
            />
        </div>
        <div class='form-group' style='margin-bottom: 2%; margin-left: 3%'>
            <label for='price'>Giá</label>
            <input
                type='text'
                class='form-control'
                id='price'
                name='price'
                value='{{topping.price}}'
                style='font-size: 15px; width: 60%;'
            />
        </div>
        <div class='form-group' style='margin-left: 3%'>
            <label for='image'>Hình ảnh</label>
            <textarea name='image' id='image'>{{topping.image}}</textarea>
        </div>
        <button
            type='submit'
            class='btn btn-primary'
            style='width: 5%; margin-bottom: 5%; margin-left: 3%'
        >Cập nhật</button>
    </form>
</div>